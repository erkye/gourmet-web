/* 最新佳作标题部分 */
.update-title{
  font-size: medium;
  font-weight: 800;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 50rpx;
}
.update-body{
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  flex-direction: column;
  justify-content: center;
}
.update-item{
  width: 100%;
  padding-bottom: 30rpx;
}
.update-item-head{
  padding-bottom: 20rpx;
  display: flex;
}
.update-item-title{
  flex: 1;
  font-size: large;
  font-weight: 600;
  position: relative;
  left: 20rpx;
}
.update-item-author{
  flex: 1;
  text-align: right;
  color: darkgray;
  font-size: 10rpx;
}
.update-item-introd{
  font-size: 28rpx;
  color: darkgray;
  position: relative;
  left: 20rpx;
  padding-bottom: 20rpx;
}
.update-item image{
  width: 100%;
}
