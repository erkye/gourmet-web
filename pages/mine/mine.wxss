/* pages/mine/mine.wxss */
.user-info-wrap{
    width: 100%;
    height: 40vh;
    background-color: black;
}
.user-img-warp{
    position: relative;
}
.user-bg{
    width: 100%;
    height: 40vh;
    filter: blur(10rpx);
}
.user-info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.user-icon{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.user-name{
    margin-top: 30rpx;
    color: #fff;
}